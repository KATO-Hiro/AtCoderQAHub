<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>AtCoder QAHub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="app/assets/stylesheets/home.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <a href="/">AtCoder QAHub</a>
      </div>
      <div class="header-list">
        <ul>
          <li><a href="/" class="home">Home</a></li>
          <li><a href="/about" class="about">About</a></li>
          <li><a href="/guideline" class="guideline">Guideline</a></li>
          <!-- FIXME: ??????????????????? -->
          <li><a href="/userpage" class="userpage">User page</a></li>
          <li><a href="/links" class="links">Links</a></li>

          <% if session[:user_id] %>
            <!-- ログイン状態 -->
            <li> <%= link_to("Log out", "/logout", {method: "post"}) %> </li>
          <% else %>
            <li><a href="/login" class="login">Log in</a></li>
          <% end %>

        </ul>
      </div>
    </header>

    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>

    <%= yield %>

    <footer>
      <span>Copyright © 2019 hiro_hiro, All Rights Reserved.</span>
    </footer>
  </body>
</html>
