<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>AtCoder QAHub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="app/assets/stylesheets/home.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <a href="/">AtCoder QAHub</a>
      </div>
      <div class="header-list">
        <ul>
          <li><a href="/" class="home">Home</a></li>
          <li> <%= link_to("Problems", "/problems") %> </li>
          <li><a href="/about" class="about">About</a></li>
          <li><a href="/guideline" class="guideline">Guideline</a></li>

          <% if @current_user %>
            <!-- ログイン状態 -->
            <li> <%= link_to("#{@current_user.name}", "/users/#{@current_user.id}") %> </li>
            <li> <%= link_to("Log out", "/logout", {method: "post"}) %> </li>
          <% else %>
            <li> <%= link_to("Log in", "/login") %> </li>
            <li> <%= link_to("Sign up", "/signup") %> </li>
          <% end %>

          <li><a href="/links" class="links">Links</a></li>

        </ul>
      </div>
    </header>

    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>

    <%= yield %>

    <footer>
      <span>Copyright © 2019 hiro_hiro, All Rights Reserved.</span>
    </footer>
  </body>
</html>
